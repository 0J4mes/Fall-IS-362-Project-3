# Cell 1: Import libraries and setup
import pandas as pd
import matplotlib.pyplot as plt
from sqlalchemy import create_engine

print("Libraries imported successfully!")

# Cell 2: Database connection with proper context management
database_path = 'Chinook_Sqlite.sqlite'
engine = create_engine(f'sqlite:///{database_path}')

# Create connection for the entire notebook session
connection = engine.connect()
print("Database connection created successfully!")

# Cell 3: Load individual tables using Python with proper connection
def load_table(table_name, conn):
    """Load a single table and return DataFrame using connection"""
    df = pd.read_sql(f'SELECT * FROM {table_name}', conn)
    print(f"Loaded {table_name}: {len(df)} rows")
    return df

print("Loading database tables...")
customers_df = load_table('Customer', connection)
invoices_df = load_table('Invoice', connection)
invoice_items_df = load_table('InvoiceLine', connection)
tracks_df = load_table('Track', connection)
albums_df = load_table('Album', connection)
print("All tables loaded successfully!")

# Cell 4: Python data exploration
print("\nDataFrame Info:")
print(f"Customers: {customers_df.shape}")
print(f"Invoices: {invoices_df.shape}")
print(f"Invoice Items: {invoice_items_df.shape}")
print(f"Tracks: {tracks_df.shape}")
print(f"Albums: {albums_df.shape}")

# Cell 5: Complex data merging using Python
print("\nPerforming complex data merging with Python...")

# Step-by-step merging to show the process
print("Step 1: Customers + Invoices")
customer_invoices = pd.merge(
    customers_df[['CustomerId', 'FirstName', 'LastName']],
    invoices_df[['InvoiceId', 'CustomerId']],
    on='CustomerId'
)
print(f"  Result: {len(customer_invoices)} rows")

print("Step 2: + Invoice Items")
customer_invoice_items = pd.merge(
    customer_invoices,
    invoice_items_df[['InvoiceLineId', 'InvoiceId', 'TrackId']],
    on='InvoiceId'
)
print(f"  Result: {len(customer_invoice_items)} rows")

print("Step 3: + Track Information")
customer_tracks = pd.merge(
    customer_invoice_items,
    tracks_df[['TrackId', 'Name', 'AlbumId']],
    on='TrackId'
)
print(f"  Result: {len(customer_tracks)} rows")

print("Step 4: + Album Information")
final_merged = pd.merge(
    customer_tracks,
    albums_df[['AlbumId', 'Title']],
    on='AlbumId'
)
print(f"  Final merged data: {len(final_merged)} rows")

# Cell 6: Format final output
required_columns = ['LastName', 'FirstName', 'Name', 'Title']
final_output = final_merged[required_columns].sort_values(['LastName', 'FirstName']).reset_index(drop=True)

print("\nRequired Output - First 10 rows:")
print(final_output.head(10))

print(f"\nFinal DataFrame shape: {final_output.shape}")

# Cell 7: Advanced Python analysis
print("\nAdvanced Python Analysis:")

# Create a function to analyze purchase patterns
def analyze_purchase_patterns(df):
    """Analyze customer purchase patterns using Python"""

    # Group by customer and calculate metrics
    customer_analysis = df.groupby(['LastName', 'FirstName']).agg({
        'Name': ['count', 'nunique'],  # Total tracks and unique tracks
        'Title': 'nunique'  # Unique albums
    }).round(2)

    # Flatten column names
    customer_analysis.columns = ['TotalTracks', 'UniqueTracks', 'UniqueAlbums']

    # Calculate additional metrics
    customer_analysis['TracksPerAlbum'] = customer_analysis['TotalTracks'] / customer_analysis['UniqueAlbums']

    return customer_analysis

# Perform analysis
customer_analysis = analyze_purchase_patterns(final_output)
print("Customer Purchase Analysis (Top 10):")
print(customer_analysis.head(10))

# Cell 8: Data visualization with Python
print("\nCreating visualizations...")

# Get available styles and use a safe option
available_styles = plt.style.available
if 'seaborn' in available_styles:
    plt.style.use('seaborn')
elif 'seaborn-v0_8' in available_styles:
    plt.style.use('seaborn-v0_8')
else:
    plt.style.use('default')

plt.figure(figsize=(15, 10))

# Plot 1: Top customers
plt.subplot(2, 2, 1)
top_customers = final_output.groupby(['LastName', 'FirstName']).size().nlargest(10)
top_customers.plot(kind='bar', color='skyblue', edgecolor='black')
plt.title('Top 10 Customers by Tracks Purchased')
plt.xticks(rotation=45)
plt.ylabel('Number of Tracks')

# Plot 2: Popular tracks
plt.subplot(2, 2, 2)
popular_tracks = final_output['Name'].value_counts().head(10)
plt.bar(range(len(popular_tracks)), popular_tracks.values, color='lightgreen', edgecolor='black')
plt.title('Top 10 Most Popular Tracks')
plt.xticks(range(len(popular_tracks)), popular_tracks.index, rotation=45, ha='right')
plt.ylabel('Purchase Count')

# Plot 3: Popular albums
plt.subplot(2, 2, 3)
popular_albums = final_output['Title'].value_counts().head(10)
plt.bar(range(len(popular_albums)), popular_albums.values, color='lightcoral', edgecolor='black')
plt.title('Top 10 Most Popular Albums')
plt.xticks(range(len(popular_albums)), popular_albums.index, rotation=45, ha='right')
plt.ylabel('Purchase Count')

# Plot 4: Tracks distribution
plt.subplot(2, 2, 4)
tracks_per_customer = final_output.groupby(['LastName', 'FirstName']).size()
plt.hist(tracks_per_customer, bins=30, alpha=0.7, color='purple', edgecolor='black')
plt.title('Distribution of Tracks per Customer')
plt.xlabel('Number of Tracks')
plt.ylabel('Number of Customers')

plt.tight_layout()
plt.savefig('customer_tracks_analysis.png', dpi=300, bbox_inches='tight')
plt.show()

# Cell 9: Save results and close connection
final_output.to_csv('chinook_python_analysis.csv', index=False)

# Close the database connection
connection.close()
engine.dispose()
print("Analysis complete! Results saved to 'chinook_python_analysis.csv'")
print("Database connection closed.")